# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this
FLASK_ENV=production
FLASK_DEBUG=False

# Admin Credentials (change these immediately!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=  # Will be generated on first run

# WireGuard Configuration
WG_INTERFACE=wg0
WG_SERVER_IP=10.0.0.1
WG_SERVER_PORT=51820
WG_SERVER_PUBLIC_KEY=
WG_SERVER_PRIVATE_KEY=
WG_ALLOWED_IPS=0.0.0.0/0,::/0
WG_DNS=1.1.1.1,1.0.0.1
WG_MTU=1420
WG_PERSISTENT_KEEPALIVE=25

# Server Configuration
SERVER_PUBLIC_IP=  # Your VPS public IP or domain
SERVER_PUBLIC_IPV6=  # Your VPS public IPv6 address
WG_SUBNET=10.0.0.0/24

# IPv6 Configuration
WG_IPV6_ENABLED=True
WG_IPV6_SUBNET=2a11:8083:11:13f0::/64  # Your dedicated IPv6 /64 subnet
WG_SERVER_IPV6=2a11:8083:11:13f0::1    # Server IPv6 within subnet
IPV6_PUBLIC_ROUTING=True                # Enable public IPv6 routing for services

# Security
SESSION_TIMEOUT=1800  # 30 minutes in seconds
MAX_LOGIN_ATTEMPTS=5
IP_WHITELIST=  # Comma-separated IPs (leave empty to allow all)
ENABLE_2FA=True

# Data Directory
DATA_DIR=./data

# Backup
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=True
AUTO_BACKUP_HOUR=2  # 2 AM daily backup

# Redis (for session storage)
REDIS_URL=redis://localhost:6379/0
